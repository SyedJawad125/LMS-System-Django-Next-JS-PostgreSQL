# ============================================
# OPTIMIZED DOCKERFILE FOR DJANGO LMS + RAG
# ============================================

# 1) Base image
FROM python:3.12.7-slim AS runtime

# 2) Environment
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# 3) OS packages (install once, cached)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# 4) Create non-root user
RUN useradd -m appuser

# 5) Workdir
WORKDIR /app

# 6) CRITICAL: Install HEAVY ML dependencies FIRST (rarely change)
# This layer gets cached and only rebuilds if requirements-base.txt changes
COPY requirements-base.txt /app/requirements-base.txt
RUN pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements-base.txt

# 7) Install LIGHTWEIGHT app dependencies SECOND (change more often)
# This layer rebuilds when you update Django/API packages
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# 8) Copy entrypoint early (doesn't change often)
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh && chown appuser:appuser /entrypoint.sh

# 9) Copy application code LAST (changes most frequently)
COPY . /app
RUN chown -R appuser:appuser /app

# 10) Drop privileges
USER appuser

# 11) Networking
EXPOSE 8000

# 12) Start-up
ENTRYPOINT ["/entrypoint.sh"]
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "config.wsgi:application"]